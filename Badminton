import java.util.Scanner;

public class Badminton extends Exercise {

	public Badminton(String n, double t, int c, Person p) {
		super(n, t, c, p);
		setName("Badminton");
	}

	public void setTime() {
		Scanner kb = new Scanner(System.in);
		System.out.println("Please enter the sport time(how many hours): ");
		double d = kb.nextDouble();
		super.setTime(d);
	}

	public void setCalories(int c) {
		Scanner dk = new Scanner(System.in);
		System.out.println("Please choose the weight between 130 and 205 lbs: ");
		double w = dk.nextDouble();

		if (129 < w && w <= 155) {
			setCalory(266);
		} else if (155 < w && w <= 180) {
			setCalory(317);
		} else if (180 < w && w <= 205) {
			setCalory(368);
		} else if (205 < w && w <= 230) {
			setCalory(419);
		} else {
			System.out.println("Please choose the weight between 130 and 205 lbs: ");
			w = dk.nextDouble();
		}
	}
}
